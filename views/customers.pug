doctype html
html
    head
        title Customers
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous")
    body
        div.container.mt-5
            h1.display-4 Customers
            table.table.table-hover.table-sm.mt-4
                tbody.thead-light
                    tr
                        th First name
                        th Last name
                        th Email address
                        th Phone
                    each customer in customers
                        tr
                            td #{customer.firstname}
                            td #{customer.lastname}
                            td #{customer.email}
                            td #{customer.phone}    
            a(href='/add').btn.btn-outline-secondary.btn-block.btn-sm Add Customer
